<div id="lists">
<li class="nav-item">
            <% if user_signed_in? %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            <% end %>
          </li>
  <% @lists.each do |list| %>
    <%= render "form", list: list %>
    <p>
      <%= link_to "Show this list", list, class: "btn btn-warning" %>
    </p>
  <% end %>
</div>

<h2>Help us register new restaurants</h2>
<%= link_to "New list", new_list_path, class: "btn btn-warning"%>